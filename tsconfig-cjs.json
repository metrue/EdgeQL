{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "WebWorker"
    ],
    "module": "CommonJS",
    "outDir": "./dist/cjs",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "types": [
      "@cloudflare/workers-types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
